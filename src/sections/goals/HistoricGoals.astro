---
import GoalCard from "@components/GoalCard.astro";

interface HistoricGoal {
  title: string;
  saved: number;
  target: number;
  deadline: string;
}

const goals: HistoricGoal[] = [
  {
    title: "Vacaciones",
    saved: 750,
    target: 2000,
    deadline: "2024-06-01",
  },
  {
    title: "Fondo de Emergencia",
    saved: 3200,
    target: 5000,
    deadline: "2024-12-31",
  },
  {
    title: "Nuevo Laptop",
    saved: 400,
    target: 1500,
    deadline: "2024-04-01",
  },
];
---

{
  goals.map((goal) => {
    return (
      <GoalCard
        title={goal.title}
        saved={goal.saved}
        target={goal.target}
        deadline={goal.deadline}
      />
    );
  })
}
