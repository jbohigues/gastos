---
import GoalsList from "@components/GoalsList.astro";
import MainLayout from "@layouts/MainLayout.astro";
import type { Goal } from "@lib/interfaces/Goal.interface";

const goals: Goal[] = [
  {
    title: "Vacaciones",
    saved: 750,
    target: 2000,
    deadline: "2024-06-01",
  },
  {
    title: "Fondo de Emergencia",
    saved: 3200,
    target: 5000,
    deadline: "2024-12-31",
