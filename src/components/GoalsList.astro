---
import GoalCard from "@components/GoalCard.astro";
import type { Goal } from "@lib/interfaces/Goal.interface";

interface Props {
  goals: Goal[];
}
const { goals } = Astro.props;
---

{
  goals.map((goal) => {
    return (
      <GoalCard
        title={goal.title}
        saved={goal.saved}
        target={goal.target}
        deadline={goal.deadline}
      />
    );
  })
}
